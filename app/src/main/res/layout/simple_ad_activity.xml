<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:tag="layout/simple_ad_activity_0"
    android:background="#ff000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/main_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:contentDescription="@null" />
    <ImageView
        android:id="@id/close"
        android:tag="binding_1"
        android:background="@drawable/simple_ad_close_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/action_close"
        android:layout_marginEnd="8.0dip"
        android:layout_alignParentEnd="true"
        app:tint="#ffffffff" />
    <TextView
        android:textColor="@color/white"
        android:id="@id/close_remaining"
        android:tag="binding_2"
        android:background="@drawable/simple_ad_close_background"
        android:paddingLeft="24.0dip"
        android:paddingRight="24.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8.0dip"
        android:layout_alignParentEnd="true"
        app:tint="#ffffffff" />
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/reward_remaining"
        android:tag="binding_3"
        android:background="@drawable/simple_ad_reward_text_background"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="5.0dip"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignTop="@id/close"
        android:layout_alignBottom="@id/close"
        android:layout_marginEnd="2.0dip"
        android:layout_toStartOf="@id/close"
        app:tint="#ffffffff" />
</RelativeLayout>