<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:paddingStart="16.0dip"
            android:paddingEnd="16.0dip">
            <ImageView
                android:layout_width="36.0dip"
                android:layout_height="36.0dip"
                android:src="@drawable/ic_diamond_stone_black_24dp"
                app:tint="?android:textColorPrimary" />
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/premium_dialog_header"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip" />
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:id="@id/main_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="16.0dip"
            android:text="@string/premium_dialog_body"
            android:layout_marginStart="32.0dip"
            android:layout_marginEnd="32.0dip" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/unlock_premium_background"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:layout_marginEnd="8.0dip">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="4.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:paddingStart="16.0dip"
                    android:paddingEnd="16.0dip">
                    <ImageView
                        android:layout_width="24.0dip"
                        android:layout_height="24.0dip"
                        android:src="@drawable/ic_movie_open_black_24dp"
                        app:tint="?android:textColorPrimary" />
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/premium_dialog_watch_ad_title"
                        android:layout_marginStart="16.0dip"
                        android:layout_marginEnd="16.0dip" />
                </LinearLayout>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@id/watch_ad_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:text="@string/premium_dialog_watch_ad_body"
                    android:layout_weight="1.0"
                    android:textAlignment="center"
                    android:layout_marginStart="16.0dip"
                    android:layout_marginEnd="16.0dip" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_gravity="center"
                    android:id="@id/watch"
                    android:background="@drawable/add_button_background"
                    android:layout_width="fill_parent"
                    android:layout_height="60.0dip"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginBottom="11.0dip"
                    android:text="@string/premium_dialog_watch_ad_btn"
                    android:paddingStart="32.0dip"
                    android:paddingEnd="32.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="8.0dip"
                    style="@style/Widget.AppCompat.Button" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:enabled="false"
                    android:textColor="#ff000000"
                    android:layout_gravity="center"
                    android:id="@id/watch_wait_msg"
                    android:background="@drawable/add_button_background"
                    android:visibility="gone"
                    android:layout_width="200.0dip"
                    android:layout_height="60.0dip"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginBottom="12.0dip"
                    android:text="@string/please_wait"
                    android:paddingStart="32.0dip"
                    android:paddingEnd="32.0dip"
                    style="@style/Widget.AppCompat.Button" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/unlock_premium_background"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:layout_marginStart="8.0dip">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="4.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.0dip"
                    android:paddingStart="16.0dip"
                    android:paddingEnd="16.0dip">
                    <ImageView
                        android:layout_width="24.0dip"
                        android:layout_height="24.0dip"
                        android:src="@drawable/ic_cash_multiple_outline_24dp_black"
                        app:tint="?android:textColorPrimary" />
                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/premium_dialog_subscription_title"
                        android:layout_marginStart="16.0dip"
                        android:layout_marginEnd="16.0dip" />
                </LinearLayout>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:text="@string/premium_dialog_subscription_body"
                    android:textAlignment="center"
                    android:layout_marginStart="16.0dip"
                    android:layout_marginEnd="16.0dip" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_gravity="center"
                    android:id="@id/pay"
                    android:background="@drawable/add_button_background"
                    android:layout_width="fill_parent"
                    android:layout_height="60.0dip"
                    android:layout_marginTop="16.0dip"
                    android:layout_marginBottom="11.0dip"
                    android:text="@string/action_buy"
                    android:paddingStart="32.0dip"
                    android:paddingEnd="32.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="8.0dip"
                    style="@style/Widget.AppCompat.Button" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:textColor="@color/colorColoredButton"
            android:layout_gravity="center"
            android:id="@id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip"
            android:text="@string/action_cancel"
            android:paddingStart="32.0dip"
            android:paddingEnd="32.0dip"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" />
    </LinearLayout>
</ScrollView>